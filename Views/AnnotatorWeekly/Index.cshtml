@model RoleBasedAuthorization.Models.AnnotatorModels

@{
    ViewData["Title"] = "Annotator Weekly";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>Annotation Information</title>
    <style>
        input[name=SelectedDate] + img {
            position: relative;
            top: 5px;
            left: 2px;
        }
    </style>
    <script type="text/javascript">
    function validateNumber(e) {
            const pattern = /^[0-9]$/;

            return pattern.test(e.key )
        }    
    </script>
</head>
<body>
<!-- Content Header (Page header) -->
<!-- Main content -->
<section class="content container-fluid">
    <div class="row">
        <!-- left column -->
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Add New Annotation</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                    @using (Html.BeginForm("WeeklyResult", "AnnotatorWeekly", FormMethod.Post))
                    {
                        <div class="form-group">
                            <label for="Monthly">Monthly</label>                                          
                            @Html.DropDownList("MONTHLY", (IEnumerable<SelectListItem>)ViewBag.MONTHLY, null, new { @class ="form-control" })

                        </div>
                        <div class="form-group">
                            <label for="Numberofweek">Number Of Week</label>
                            <input type="text" class="form-control" id="Numberofweek" name="Numberofweek" value="@ViewBag.numberofweek" placeholder="Enter NumberOfWeek">
                            <input type="submit" value="Generate" id="btnGenerate" formaction="IndexRecord" class="btn btn-primary"/>
                        </div>
                        @if(ViewBag.numberofweek != null) 
                        {
                            <div name="numberofweek">
                               
                                @for (int i = 1; i <= ViewBag.numberofweek; i++)
                                {
                                    <div class="form-group">
                                        <label for="Startdate">Start Date @i</label>
                                        <input type="text" class="form-control" id="Startdate_@i" name="Startdate_@i" placeholder="Enter Startdate">
                                    </div>
                                    <div class="form-group">
                                        <label for="Enddate">End Date @i</label>
                                        <input type="text" class="form-control" id="Enddate_@i" name="Enddate_@i" placeholder="Enter Enddate">
                                    </div>            
                              
                                }
                            </div> 
                                
                        }
                        else
                        {
                            
                                
                        }
                         
                        <div class="box-body">
                            <div class="form-group">  
                               @Html.ListBoxFor(m => m.AnnotatorIds,  Model.Annotators, new { size = 40, width = 1000 })  
                            </div>  
                            
                        
                        @*<div class="form-group">
                            <label for="AnnotatorId">Annotator</label>
                          @Html.DropDownList("AnnotatorId", (IEnumerable<SelectListItem>)ViewBag.userroles,null, new { @class = "form-control" })
                         </div>*@
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>        
                    }
                    
                
 @section Scripts
    {
        
    <!-- Bootstrap -->
    <link href="https://code.jquery.com/ui/1.10.4/themes/smoothness/jquery-ui.css" rel="Stylesheet"
    type="text/css" />
    <script type="text/javascript" src="https://code.jquery.com/jquery-1.7.2.min.js"></script>
    <script type="text/javascript" src="https://code.jquery.com/ui/1.10.4/jquery-ui.js"></script>

    <script>
        function getYesterdayDate() {
			  return new Date(new Date().getTime() - 24*60*60*1000);
			}
	function getTomorrowDate() {
	var today = new Date();
	return new Date(new Date().getFullYear()+'-'+(today.getMonth()+1)+'-'+today.getDate());
	}
    $('#txtSelectedDate').datepicker({
                        minDate: getYesterdayDate(),
				        maxDate: getTomorrowDate()
                  });

            $(function () { 
                                $('#Startdate_1').datepicker();
                                $('#Enddate_1').datepicker();
                                $('#Startdate_2').datepicker();
                                $('#Enddate_2').datepicker();
                                $('#Startdate_3').datepicker();
                                $('#Enddate_3').datepicker();
                                $('#Startdate_4').datepicker();
                                $('#Enddate_4').datepicker();
                                $('#Startdate_5').datepicker();
                                $('#Enddate_5').datepicker();

                
            });
    </script>
 }
            </div>
        </div>
    </div>
</section>
